# Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=http://localhost:4000

# ============== AI SERVICES ==============

# Claude API (Anthropic)
# Get your API key from: https://console.anthropic.com
NEXT_PUBLIC_CLAUDE_API_KEY=your_claude_api_key_here
# Optional: Separate keys for different tiers
CLAUDE_PRO_API_KEY=your_pro_api_key_here
CLAUDE_DEVELOPER_API_KEY=your_developer_api_key_here
CLAUDE_ENTERPRISE_API_KEY=your_enterprise_api_key_here

# Vertex AI (Google Cloud - RECOMMENDED)
# Get credentials from Google Cloud Console: https://console.cloud.google.com
NEXT_PUBLIC_VERTEX_PROJECT_ID=your_gcp_project_id
NEXT_PUBLIC_VERTEX_LOCATION=us-central1
NEXT_PUBLIC_VERTEX_ACCESS_TOKEN=your_access_token_here
# Alternative: Use API key instead of access token
# NEXT_PUBLIC_VERTEX_API_KEY=your_vertex_api_key

# Gemini API (Consumer API - fallback)
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Legacy GCP Project ID
NEXT_PUBLIC_GCP_PROJECT_ID=your_gcp_project_id_here

# Local Model Configuration (for offline/privacy)
NEXT_PUBLIC_LM_STUDIO_URL=http://localhost:1234
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434

# ============== CLOUD SERVICES ==============

# Aura Endpoint
NEXT_PUBLIC_AURA_ENDPOINT=http://localhost:8000
AURA_INTERNAL_KEY=your_internal_key_here

# Storage
NEXT_PUBLIC_GCS_BUCKET=your_gcs_bucket_here

# ============== FIREBASE CONFIGURATION ==============
# Firebase Authentication & Database (REQUIRED for social network)
# Get your Firebase config from: https://console.firebase.google.com
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
