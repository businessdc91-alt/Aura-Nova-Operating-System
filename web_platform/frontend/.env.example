# Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=http://localhost:4000

# AI Services
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_GCP_PROJECT_ID=your_gcp_project_id_here

# Vertex AI Configuration (for Imagen image generation)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable Vertex AI API: https://console.cloud.google.com/apis/library/aiplatform.googleapis.com
NEXT_PUBLIC_VERTEX_API_KEY=your_vertex_api_key_here
NEXT_PUBLIC_VERTEX_LOCATION=us-central1

# Local Model Configuration
NEXT_PUBLIC_LM_STUDIO_URL=http://localhost:1234
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434

# Cloud Services
NEXT_PUBLIC_AURA_ENDPOINT=http://localhost:8000
AURA_INTERNAL_KEY=your_internal_key_here

# Storage
NEXT_PUBLIC_GCS_BUCKET=your_gcs_bucket_here

# Optional: Firebase Configuration
# NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
