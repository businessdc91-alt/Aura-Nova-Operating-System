# Environment Variables Template
# Copy this to .env.local and fill with your values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Backend Firebase Admin (for .env in backend folder)
FIREBASE_ADMIN_SDK_KEY=./path/to/serviceAccountKey.json
FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

# API Configuration
API_BASE_URL=http://localhost:5001/functions
NODE_ENV=development

# Database
DATABASE_HOST=localhost
DATABASE_PORT=8080
DATABASE_NAME=aura-nova

# Authentication
JWT_SECRET=your_jwt_secret_key
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# Third-party Services
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your_username/your_repo

# Email Configuration (if using Firebase Extensions)
SENDGRID_API_KEY=your_sendgrid_key
ADMIN_EMAIL=admin@aurannovastudios.com

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# Feature Flags
ENABLE_OFFLINE_MODE=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
